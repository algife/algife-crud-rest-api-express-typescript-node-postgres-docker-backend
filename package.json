{
  "name": "ts-rest-api-playground_server",
  "version": "0.0.1",
  "description": "CRUD RESTful API built with TypeScript + Node.js + Postgresql + Docker",
  "main": "api/index.js",
  "scripts": {
    "start": "node .",
    "prebuild": "npm run clean",
    "build": "npm run tsc && npm run copy-public",
    "deploy": "npm run vercel:deploy",
    "prevercel:deploy": "npm run build",
    "vercel:deploy": "npx vercel deploy --prod",
    "vercel:dev": "npx vercel dev",
    "postvercel:deploy": "npm run clean",
    "tsc": "npx tsc -p .",
    "clean": "npx rimraf -rf .build ./dist ./api ./public",
    "copy-public": "npx copyfiles -a -u 1 src/public/** ./"
  },
  "author": "Alexandre Gimenez (algife.com)",
  "license": "MIT",
  "dependencies": {
    "@faker-js/faker": "^6.1.2",
    "@types/node": "^17.0.25",
    "@types/uuid": "^8.3.4",
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "express-json-validator-middleware": "^2.2.1",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "swagger-jsdoc": "^6.2.0",
    "swagger-ui-express": "^4.3.0",
    "tslib": "^2.3.1",
    "typeorm": "^0.3.5",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/json-schema": "^7.0.11",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "copyfiles": "^2.4.1",
    "lint-staged": "^12.3.7",
    "nodemon": "^2.0.15",
    "rimraf": "^3.0.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3",
    "vercel": "^24.1.0"
  },
  "nodemonConfig": {
    "ignore": [
      "dist/*",
      "public/*",
      "test/*",
      "docs/*",
      ".notes/*",
      "node_modules/*"
    ],
    "delay": 1000
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/algife/algife/crud-rest-api-express-typescript-node-postgres-docker-backend.git"
  },
  "keywords": [
    "typescript",
    "javascript",
    "postgresql",
    "postgres",
    "docker",
    "containerized",
    "containers",
    "node.js",
    "rest",
    "api",
    "restful"
  ]
}
